<!doctype html>
<html lang="en">
<head>
  {{> head }}
</head>
<body>

    {{> header }}
    
    <form class="registerForm" action="http://localhost:4000/login" method="post">

        <label for="login">Login</label>
        <input minlength="1" maxlength="20" id="login" name="login" type="text" required placeholder="Enter login">

        <label for="password">password</label>
        <input  minlength="1" maxlength="20" id="password" name="password" type="password" required placeholder="Enter password">

        {{#err}}
            <h4 style="margin-top:8px">{{err}}</h4>
        {{/err}}
        {{#messages.error}}
            <h4 style="margin-top:8px">{{messages.error}}</h4>
        {{/messages.error}}

        <input type="submit" value="Sign ip">
    </form>

    {{> footer }}
</body>
</html>