<!doctype html>
<html lang="en">
<head>
  {{> head }}
</head>
<body> 
  {{> header }}
  
    <div class="AboutInfo">
        {{#event}}
            <img src={{themeUrl}}>
            <p>{{description}}</p>
            <div class="buttons">
            <form action="/event/{{id}}/delete" method="post">
              <input type="submit" value="Delete">
            </form>

            <form action="/events/update" method="get">
              <input type="submit" value="Update">
              <input type="hidden" name="id" value="{{id}}">
            </form>
            </div>

        {{/event}}
    </div>
    {{> footer }}
</body>
</html>